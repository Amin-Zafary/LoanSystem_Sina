@page
@model LoanSystem.Web.Pages.Facilities.CreateModel

<h2>Create Facility</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Code"></label>
        <input asp-for="Input.Code" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Input.Name"></label>
        <input asp-for="Input.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Input.FacilityGroupId"></label>
        <select asp-for="Input.FacilityGroupId" asp-items="Model.FacilityGroupOptions" class="form-select">
            <option value="">-- Select Facility Group --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Input.PaymentStages"></label>
        <input asp-for="Input.PaymentStages" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index">Back</a>
</form>


@page
@model LoanSystem.Web.Pages.Facilities.IndexModel
<h2>Facilities</h2>
<p><a asp-page="Create">Create New</a></p>
<table>
<thead><tr><th>Name</th><th>Code</th><th>GroupId</th><th>Stages</th><th>Actions</th></tr></thead>
<tbody>
@foreach(var f in Model.Facilities){
<tr>
<td>@f.Name</td><td>@f.Code</td><td>@f.FacilityGroupId</td><td>@f.PaymentStages</td>
<td><a asp-page="Edit" asp-route-id="@f.Id">Edit</a> | <a asp-page="Delete" asp-route-id="@f.Id">Delete</a></td>
</tr>
}
</tbody>
</table>

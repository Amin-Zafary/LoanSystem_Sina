@page
@model LoanSystem.Web.Pages.FacilityGroups.CreateModel
<h2>Create Facility Group</h2>
<form method="post">
<div><label>Name</label><input asp-for="Input.Name" /></div>
<div><label>Code</label><input asp-for="Input.Code" /></div>
<div><label>InterestRate</label><input asp-for="Input.InterestRate" type="number" step="0.01"/></div>
<div><label>RepaymentPeriodMonths</label><input asp-for="Input.RepaymentPeriodMonths" type="number"/></div>
<div><label>LateFeeRate</label><input asp-for="Input.LateFeeRate" type="number" step="0.01"/></div>
<button type="submit">Save</button>
</form>
<a asp-page="Index">Back</a>
